{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "space-before-function-paren": 0,
        "indent": ["error", 4],
        "semi-style": ["error", "last"],
        "semi": ["error", "always"],
        "quote-props": 0,
        "prefer-template": 2,
        "react/prop-types": [0]
    }
}
